<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>Controller_LS</servlet-name>
        <servlet-class>taskpilot.controller.Controller_LS</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controller_T</servlet-name>
        <servlet-class>taskpilot.controller.Controller_T</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Controller_LS</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Controller_LS</servlet-name>
        <url-pattern>/signIn</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Controller_LS</servlet-name>
        <url-pattern>/redefinition</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Controller_T</servlet-name>
        <url-pattern>/tasks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controller_T</servlet-name>
        <url-pattern>/Controller_T</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Controller_LS</servlet-name>
        <url-pattern>/Controller_LS</url-pattern>
    </servlet-mapping>
    
</web-app>
